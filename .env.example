# Glass Quizzes - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# SUPABASE
# ===================
# Frontend uses VITE_ prefix
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key

# Server uses service role key for bypassing RLS when needed
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ===================
# DATABASE (local dev)
# ===================
# Used by docker-compose and backup scripts
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/glass_quizzes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=glass_quizzes

# ===================
# TELEGRAM BOT
# ===================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_USERNAME=YourBotUsername

# Webhook URL (production only)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/bot/webhook
TELEGRAM_WEBHOOK_SECRET=random-secret-string

# ===================
# TELEGRAM MINI APP
# ===================
# Mini App URL for inline buttons
VITE_MINI_APP_URL=https://t.me/YourBotUsername/app

# ===================
# ADMIN ACCESS
# ===================
# Comma-separated Telegram user IDs with admin access
ADMIN_TELEGRAM_IDS=123456789,987654321

# ===================
# SERVER
# ===================
PORT=3001
NODE_ENV=development

# ===================
# API (for frontend)
# ===================
VITE_API_URL=http://localhost:3001

# ===================
# OPTIONAL
# ===================
# Analytics, logging, etc.
# SENTRY_DSN=
# POSTHOG_KEY=
