# Glass Quizzes - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# SUPABASE
# ===================
# Frontend uses VITE_ prefix
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key

# Server uses service role key for bypassing RLS when needed
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ===================
# DATABASE (local dev)
# ===================
# Used by docker-compose and backup scripts
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/glass_quizzes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=glass_quizzes

# ===================
# TELEGRAM BOT
# ===================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=8518347500:AAGTmkn6qIokzi6KwfDVrieBqpzMOtxFzHE
TELEGRAM_BOT_USERNAME=QuipoBot

# Webhook URL (production only) — тот же домен что и Mini App
TELEGRAM_WEBHOOK_URL=https://YOUR-NETLIFY-SITE.netlify.app/
TELEGRAM_WEBHOOK_SECRET=your-secret

# ===================
# TELEGRAM MINI APP
# ===================
# URL твоего Netlify-сайта (после переезда — подставь новый)
VITE_MINI_APP_URL=https://YOUR-NETLIFY-SITE.netlify.app

# ===================
# ADMIN ACCESS
# ===================
# Comma-separated Telegram user IDs with admin access
ADMIN_TELEGRAM_IDS=47284045

# ===================
# SERVER
# ===================
PORT=3001
NODE_ENV=development

# ===================
# API (for frontend)
# ===================
VITE_API_URL=http://localhost:3001

# ===================
# OPENAI (AI генерация квизов/тестов)
# ===================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
# Цена в Telegram Stars за 1 кредит (1 генерация = 3 варианта)
AI_GENERATION_PRICE_STARS=100

